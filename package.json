{
  "name": "@tanloc2k1/create-node-ts",
  "version": "1.0.5",
  "description": "CLI tool to generate TypeScript node projects",
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "create-node-ts": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "cp -r templates dist/ || xcopy templates dist\\templates /E /I /Y",
    "dev": "ts-node src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "microservice",
    "typescript",
    "generator",
    "cli",
    "template",
    "node",
    "express"
  ],
  "author": "tanloc2k1",
  "license": "MIT",
  "dependencies": {
    "inquirer": "^9.2.12",
    "fs-extra": "^11.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md"
  ]
}
